<!DOCTYPE html>
<html lang="{{lang}}">
	<head>
		<meta charset="utf-8" />
		<title>{{title}}</title>
		{{#metas}}{{#content}}<meta name="{{name}}" content="{{content}}"/>
		{{/content}}{{/metas}}
		{{#styles}}<link rel="stylesheet" href="{{src}}" media="{{media}}" />{{/styles}}
		<link rel="apple-touch-icon-precomposed" hre="{{base_url}}assets/img/favicon-152.png">
		<meta name="msapplication-TileColor" content="#F2B825">
		<meta name="msapplication-TileImage" content="{{base_url}}assets/img/favicon-144.png">
	</head>
	<body {{#custom_css}}class="{{custom_css}}"{{/custom_css}}>
		<div class="banner compact">
			{{>layout/header}}
			{{>layout/navigation}}
		</div>
		{{>content}}
		{{>layout/footer}}
		{{#scripts}}<script type="text/javascript" src="{{src}}"></script>{{/scripts}}
	</body>
</html>